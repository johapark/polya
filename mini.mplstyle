# General features
# .15 = dark_gray
# .8 = light_gray

figure.facecolor: white
text.color: black

# Legend
legend.numpoints: 1
legend.scatterpoints: 1
legend.handlelength: 1.0
legend.fontsize: medium


# Ticks
xtick.major.size: 0
ytick.major.size: 0
xtick.minor.size: 0
ytick.minor.size: 0
xtick.major.width: 0.5
ytick.major.width: 0.5

# Axes
axes.linewidth: 0.5

# Lines
#lines.linewidth: 0.75
lines.linewidth: 1.0

# Grid
grid.linestyle: --
grid.linewidth: 0.3

